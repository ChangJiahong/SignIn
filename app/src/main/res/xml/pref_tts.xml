<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <SwitchPreference
        android:defaultValue="true"
        android:key="voice_is"
        android:title="@string/pref_tts_is" />

    <ListPreference
        android:defaultValue="M"
        android:dependency="voice_is"
        android:entries="@array/pref_voice_list_titles"
        android:entryValues="@array/pref_voice_list_values"
        android:key="voice_type"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_select_voice" />

    <ListPreference
        android:defaultValue="5"
        android:dependency="voice_is"
        android:entries="@array/pref_voice_list_1_15"
        android:entryValues="@array/pref_voice_list_1_15"
        android:key="voice_volume"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="音量"
        />

    <ListPreference
        android:defaultValue="5"
        android:dependency="voice_is"
        android:entries="@array/pref_voice_list_1_15"
        android:entryValues="@array/pref_voice_list_1_15"
        android:key="voice_speed"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="语速"
        />

    <ListPreference
        android:defaultValue="5"
        android:dependency="voice_is"
        android:entries="@array/pref_voice_list_1_15"
        android:entryValues="@array/pref_voice_list_1_15"
        android:key="voice_pitch"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="语调"
        />

    <ListPreference
        android:defaultValue="MIX_MODE_DEFAULT"
        android:dependency="voice_is"
        android:entries="@array/pref_voice_mix_mode"
        android:entryValues="@array/pref_voice_mix_mode_values"
        android:key="mix_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="离/在线模式选择"
        />

    <PreferenceCategory>
        <Preference
            android:key="default"
            android:title="恢复默认设置" />
    </PreferenceCategory>
</PreferenceScreen>